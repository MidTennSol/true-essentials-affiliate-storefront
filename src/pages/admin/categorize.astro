---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Check authentication
const isAuthenticated = Astro.cookies.get('admin_auth')?.value === 'authenticated';

if (!isAuthenticated) {
  return Astro.redirect('/admin');
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Categorize Products - True Essentials Admin</title>
  <style>
    body {
      font-family: 'Inter', system-ui, sans-serif;
      margin: 0;
      background: #f8fafc;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1rem;
    }

    main {
      flex: 1;
      padding: 2rem 0;
    }

    .admin-header {
      background: white;
      padding: 2rem 0;
      border-bottom: 1px solid #e2e8f0;
      margin-bottom: 2rem;
    }

    .admin-title {
      font-size: 2.5rem;
      font-weight: 700;
      color: #1e293b;
      margin: 0;
    }

    .admin-subtitle {
      color: #64748b;
      font-size: 1.125rem;
      margin: 0.5rem 0 0 0;
    }

    .categorize-section {
      background: white;
      border-radius: 1rem;
      padding: 2rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
      margin-bottom: 2rem;
    }

    .section-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: #1e293b;
      margin: 0 0 1rem 0;
    }

    .section-description {
      color: #64748b;
      margin-bottom: 2rem;
      line-height: 1.6;
    }

    .categorize-button {
      background: #4287a8;
      color: white;
      padding: 1rem 2rem;
      border: none;
      border-radius: 0.5rem;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .categorize-button:hover {
      background: #336f74;
      transform: translateY(-1px);
    }

    .categorize-button:disabled {
      background: #94a3b8;
      cursor: not-allowed;
      transform: none;
    }

    .results {
      margin-top: 2rem;
      padding: 1.5rem;
      background: #f8fafc;
      border-radius: 0.5rem;
      border: 1px solid #e2e8f0;
    }

    .results.hidden {
      display: none;
    }

    .results-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: #1e293b;
      margin: 0 0 1rem 0;
    }

    .result-item {
      background: white;
      padding: 1rem;
      border-radius: 0.5rem;
      margin-bottom: 0.5rem;
      border: 1px solid #e2e8f0;
    }

    .result-product {
      font-weight: 600;
      color: #1e293b;
      margin-bottom: 0.5rem;
    }

    .result-category {
      font-size: 0.9rem;
      color: #64748b;
    }

    .result-updated {
      color: #059669;
      font-weight: 500;
    }

    .result-skipped {
      color: #d97706;
      font-weight: 500;
    }

    .result-error {
      color: #dc2626;
      font-weight: 500;
    }

    .loading {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .spinner {
      width: 1rem;
      height: 1rem;
      border: 2px solid #e2e8f0;
      border-top: 2px solid #4287a8;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .categories-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
      margin-top: 1rem;
    }

    .category-item {
      background: #f1f5f9;
      padding: 0.75rem;
      border-radius: 0.5rem;
      font-size: 0.9rem;
      color: #475569;
    }
  </style>
</head>

<body>
  <Header />
  
  <main>
    <div class="admin-header">
      <div class="container">
        <h1 class="admin-title">Product Categorization</h1>
        <p class="admin-subtitle">Use AI to automatically categorize your products</p>
      </div>
    </div>

    <div class="container">
      <div class="categorize-section">
        <h2 class="section-title">Auto-Categorize Products</h2>
        <p class="section-description">
          This tool will analyze your product titles and descriptions to automatically assign categories.
          It will only update products that don't have a category or are marked as "Miscellaneous".
        </p>
        <div style="background: #e0f2fe; padding: 1rem; border-radius: 0.5rem; margin-bottom: 1rem; border: 1px solid #b3e5fc;">
          <strong>✨ Auto-Categorization is now enabled!</strong><br>
          New products added through the admin panel will be automatically categorized when created.
          Use this tool to categorize existing products that were added before this feature was enabled.
        </div>
        
        <button id="categorizeBtn" class="categorize-button">
          Start Categorization
        </button>
        
        <div id="results" class="results hidden">
          <h3 class="results-title">Categorization Results</h3>
          <div id="resultsContent"></div>
        </div>
      </div>

      <div class="categorize-section">
        <h2 class="section-title">Available Categories</h2>
        <p class="section-description">
          Products will be automatically assigned to one of these categories based on their content:
        </p>
        <div class="categories-list">
          <div class="category-item">Arts, Crafts & Sewing</div>
          <div class="category-item">Automotive</div>
          <div class="category-item">Books</div>
          <div class="category-item">Electronics</div>
          <div class="category-item">Health & Household</div>
          <div class="category-item">Home & Kitchen</div>
          <div class="category-item">Industrial & Scientific</div>
          <div class="category-item">Miscellaneous</div>
          <div class="category-item">Outdoor & Tactical Gear</div>
          <div class="category-item">Sports & Outdoors</div>
          <div class="category-item">Tools & Home Improvement</div>
        </div>
      </div>
    </div>
  </main>

  <Footer />

  <script>
    document.getElementById('categorizeBtn')?.addEventListener('click', async function() {
      const btn = this as HTMLButtonElement;
      const results = document.getElementById('results');
      const resultsContent = document.getElementById('resultsContent');
      
      if (!results || !resultsContent) return;
      
      // Disable button and show loading
      btn.disabled = true;
      btn.innerHTML = '<div class="loading"><div class="spinner"></div>Categorizing...</div>';
      
      try {
        const response = await fetch('/api/categorize-products', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ action: 'categorize' })
        });
        
        const data = await response.json();
        
        if (data.success) {
          // Show results
          results.classList.remove('hidden');
          resultsContent.innerHTML = '';
          
          let updatedCount = 0;
          let skippedCount = 0;
          let errorCount = 0;
          
          data.results.forEach((result: any) => {
            const item = document.createElement('div');
            item.className = 'result-item';
            
            let statusClass = 'result-updated';
            let statusText = 'Updated';
            
            if (result.skipped) {
              statusClass = 'result-skipped';
              statusText = 'Skipped';
              skippedCount++;
            } else if (result.error) {
              statusClass = 'result-error';
              statusText = 'Error';
              errorCount++;
            } else if (result.updated) {
              updatedCount++;
            }
            
            item.innerHTML = `
              <div class="result-product">${result.title}</div>
              <div class="result-category">
                ${result.currentCategory} → ${result.suggestedCategory}
                <span class="${statusClass}">[${statusText}]</span>
              </div>
            `;
            
            resultsContent.appendChild(item);
          });
          
          // Add summary
          const summary = document.createElement('div');
          summary.style.cssText = 'margin-top: 1rem; padding: 1rem; background: #e0f2fe; border-radius: 0.5rem;';
          summary.innerHTML = `
            <strong>Summary:</strong> 
            ${updatedCount} updated, 
            ${skippedCount} skipped, 
            ${errorCount} errors
          `;
          resultsContent.appendChild(summary);
          
        } else {
          alert('Error: ' + data.message);
        }
        
      } catch (error) {
        console.error('Error:', error);
        alert('Failed to categorize products. Please try again.');
      } finally {
        // Re-enable button
        btn.disabled = false;
        btn.innerHTML = 'Start Categorization';
      }
    });
  </script>
</body>
</html> 