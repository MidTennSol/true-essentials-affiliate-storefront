---
import { getProductBySlug, getAllProducts } from '../../lib/airtable.js';
import type { AirtableProduct } from '../../lib/airtable.js';
import Header from '../../components/Header.astro';
import { generateImageUrlCandidates } from '../../lib/amazon-scraper.ts';

export async function getStaticPaths() {
  try {
    const products = await getAllProducts();
    return products.map((product) => ({
      params: { slug: product.fields.Slug },
      props: { product },
    }));
  } catch (error) {
    console.error('Error generating static paths:', error);
    return [];
  }
}

const { slug } = Astro.params;
let { product } = Astro.props as { product: AirtableProduct };

// Fallback: try to fetch product if not provided via static generation
if (!product && slug) {
  try {
    const fetchedProduct = await getProductBySlug(slug);
    if (fetchedProduct) {
      product = fetchedProduct;
    }
  } catch (error) {
    console.error('Error fetching product:', error);
  }
}

// Handle 404 case
if (!product) {
  return Astro.redirect('/404');
}

const pageTitle = `${product.fields.Title} - True Essentials`;
const pageDescription = product.fields.Description.substring(0, 160) + '...';

// Generate fallback image URLs if the main image URL doesn't work
const extractASIN = (url: string) => {
  const match = url.match(/\/dp\/([A-Z0-9]{10})/);
  return match ? match[1] : null;
};

const asin = extractASIN(product.fields['Affiliate URL'] || '');
const fallbackImageUrls = asin ? generateImageUrlCandidates(asin) : [];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{pageTitle}</title>
  <meta name="description" content={pageDescription}>
  
  <!-- Open Graph / Social Media -->
  <meta property="og:type" content="product">
  <meta property="og:title" content={product.fields.Title}>
  <meta property="og:description" content={pageDescription}>
  <meta property="og:image" content={product.fields['Image URL']}>
  <meta property="og:url" content={`https://yoursite.com/products/${product.fields.Slug}`}>
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={product.fields.Title}>
  <meta name="twitter:description" content={pageDescription}>
  <meta name="twitter:image" content={product.fields['Image URL']}>

  <style>
    /* ==========================================================================
       PREMIUM PRODUCT DETAIL PAGE DESIGN
       ========================================================================== */

    body {
      font-family: var(--font-body);
      line-height: 1.6;
      color: var(--color-gray-900);
      background: var(--color-gray-50);
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 var(--space-4);
    }

    /* Professional Breadcrumb Navigation */
    .breadcrumb {
      background: white;
      padding: var(--space-4) 0;
      border-bottom: 1px solid var(--color-gray-200);
      margin-bottom: var(--space-8);
    }

    .breadcrumb-nav {
      display: flex;
      align-items: center;
      gap: var(--space-2);
      font-size: var(--text-sm);
      color: var(--color-gray-600);
    }

    .breadcrumb-nav a {
      color: var(--color-primary-600);
      text-decoration: none;
      font-weight: 500;
      transition: color 0.2s ease;
    }

    .breadcrumb-nav a:hover {
      color: var(--color-primary-700);
    }

    .breadcrumb-separator {
      color: var(--color-gray-400);
      font-weight: 300;
    }

    .breadcrumb-current {
      color: var(--color-gray-900);
      font-weight: 600;
    }

    /* Product Detail Layout */
    .product-detail {
      background: white;
      border-radius: var(--radius-xl);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
      overflow: hidden;
      margin-bottom: var(--space-16);
    }

    .product-layout {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--space-12);
      padding: var(--space-12);
      align-items: start;
    }

    /* Premium Image Gallery Section */
    .product-image-section {
      position: relative;
    }

    .product-image-gallery {
      position: relative;
      border-radius: var(--radius-xl);
      overflow: hidden;
      background: var(--color-gray-100);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .product-image {
      width: 100%;
      height: 500px;
      object-fit: cover;
      transition: transform 0.3s ease;
      cursor: zoom-in;
      background: linear-gradient(135deg, var(--color-gray-50) 0%, var(--color-gray-100) 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--color-gray-400);
      font-size: var(--text-lg);
      font-weight: 500;
    }

    .product-image:hover {
      transform: scale(1.02);
    }

    .product-badge {
      position: absolute;
      top: var(--space-4);
      left: var(--space-4);
      background: rgba(66, 135, 168, 0.95);
      color: white;
      padding: var(--space-2) var(--space-4);
      border-radius: var(--radius-full);
      font-size: var(--text-sm);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      backdrop-filter: blur(10px);
      z-index: 2;
    }

    /* Product Information Section */
    .product-info {
      display: flex;
      flex-direction: column;
      gap: var(--space-6);
    }

    .product-category {
      font-size: var(--text-sm);
      font-weight: 600;
      color: var(--color-primary-600);
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }

    .product-title {
      font-size: var(--text-4xl);
      font-weight: 700;
      color: var(--color-gray-900);
      line-height: 1.2;
      font-family: var(--font-display);
      margin: 0;
    }



    .product-description {
      color: var(--color-gray-700);
      font-size: var(--text-base);
      line-height: 1.7;
      white-space: pre-line;
    }

    /* Enhanced Product Actions */
    .product-actions {
      display: flex;
      flex-direction: column;
      gap: var(--space-4);
    }

    .primary-actions {
      display: flex;
      gap: var(--space-3);
    }

    .btn {
      padding: var(--space-4) var(--space-6);
      border: none;
      border-radius: var(--radius-lg);
      font-size: var(--text-base);
      font-weight: 600;
      text-decoration: none;
      text-align: center;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-2);
      position: relative;
      overflow: hidden;
    }

    .btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: left 0.5s;
    }

    .btn:hover::before {
      left: 100%;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-primary-700) 100%);
      color: white;
      flex: 1;
      box-shadow: 0 8px 20px rgba(66, 135, 168, 0.3);
      font-size: var(--text-lg);
      padding: var(--space-5) var(--space-8);
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, var(--color-primary-700) 0%, var(--color-primary-800) 100%);
      transform: translateY(-2px);
      box-shadow: 0 12px 28px rgba(66, 135, 168, 0.4);
    }

    .btn-secondary {
      background: white;
      color: var(--color-gray-700);
      border: 2px solid var(--color-gray-300);
      min-width: 140px;
    }

    .btn-secondary:hover {
      background: var(--color-gray-50);
      border-color: var(--color-gray-400);
      transform: translateY(-1px);
    }

    .secondary-actions {
      display: flex;
      gap: var(--space-3);
      justify-content: center;
    }

    .action-link {
      display: flex;
      align-items: center;
      gap: var(--space-2);
      color: var(--color-gray-600);
      text-decoration: none;
      font-size: var(--text-sm);
      font-weight: 500;
      transition: color 0.2s ease;
    }

    .action-link:hover {
      color: var(--color-primary-600);
    }

    /* Trust Indicators */
    .trust-badges {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-4);
      padding: var(--space-6);
      background: linear-gradient(135deg, var(--color-gray-50) 0%, white 100%);
      border-radius: var(--radius-lg);
      border: 1px solid var(--color-gray-200);
    }

    .trust-badge {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: var(--space-2);
    }

    .trust-badge-icon {
      font-size: var(--text-2xl);
      margin-bottom: var(--space-1);
    }

    .trust-badge-title {
      font-weight: 600;
      color: var(--color-gray-900);
      font-size: var(--text-sm);
    }

    .trust-badge-text {
      font-size: var(--text-xs);
      color: var(--color-gray-600);
    }



    /* Related Products Section */
    .related-products {
      margin-top: var(--space-20);
      padding: var(--space-12) 0;
      background: white;
      border-radius: var(--radius-xl);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }

    .section-title {
      font-size: var(--text-3xl);
      font-weight: 700;
      color: var(--color-gray-900);
      margin-bottom: var(--space-8);
      text-align: center;
      font-family: var(--font-display);
    }

    .related-products-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--space-6);
      margin-top: var(--space-8);
    }

    /* Mobile Responsive Design */
    @media (max-width: 768px) {
      .product-layout {
        grid-template-columns: 1fr;
        gap: var(--space-8);
        padding: var(--space-6);
      }

      .product-image {
        height: 300px;
      }

      .product-title {
        font-size: var(--text-2xl);
      }



      .primary-actions {
        flex-direction: column;
      }

      .trust-badges {
        grid-template-columns: 1fr;
        gap: var(--space-3);
      }

      .specs-grid {
        grid-template-columns: 1fr;
      }

      .related-products-grid {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 480px) {
      .container {
        padding: 0 var(--space-3);
      }

      .product-layout {
        padding: var(--space-4);
      }

      .btn-primary {
        font-size: var(--text-base);
        padding: var(--space-4) var(--space-6);
      }
    }
  </style>
</head>
<body>
  <Header />
  
  <main>
    <div class="breadcrumb">
      <div class="container">
        <nav class="breadcrumb-nav">
          <a href="/">Home</a>
          <span class="breadcrumb-separator">›</span>
          <a href="/products">Products</a>
          <span class="breadcrumb-separator">›</span>
          <span class="breadcrumb-current">{product.fields.Title}</span>
        </nav>
      </div>
    </div>

    <div class="container">
      <div class="product-detail">
        <div class="product-layout">
          <div class="product-image-section">
            <div class="product-image-gallery">
              <div class="product-badge">Premium Quality</div>
              <a 
                href={product.fields['Affiliate URL']}
                target="_blank"
                rel="noopener noreferrer"
              >
                <img 
                  src={product.fields['Image URL'] || (fallbackImageUrls[0] || 'https://via.placeholder.com/400x400/e2e8f0/64748b?text=🍳+Kitchen+Item')}
                  alt={product.fields.Title}
                  class="product-image"
                  loading="eager"
                  onerror="this.src='https://via.placeholder.com/400x400/e2e8f0/64748b?text=🍳+Kitchen+Item'; this.onerror=null;"
                />
              </a>
            </div>
          </div>

          <div class="product-info">
            <div class="product-category">Kitchen Essentials</div>
            <a 
              href={product.fields['Affiliate URL']}
              target="_blank"
              rel="noopener noreferrer"
              style="text-decoration: none; color: inherit;"
            >
              <h1 class="product-title">{product.fields.Title}</h1>
            </a>

            <div class="product-description">{product.fields.Description}</div>

            <div class="product-actions">
              <div class="primary-actions">
                <a 
                  href={product.fields['Affiliate URL']}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn btn-primary"
                >
                  🛒 Buy on Amazon
                </a>
                <a 
                  href="/products"
                  class="btn btn-secondary"
                >
                  ← Back to Products
                </a>
              </div>
              
              <div class="secondary-actions">
                <a href="#" class="action-link">
                  <span>❤️</span>
                  <span>Add to Wishlist</span>
                </a>
                <a href="#" class="action-link">
                  <span>📤</span>
                  <span>Share Product</span>
                </a>
                <a href="#" class="action-link">
                  <span>📋</span>
                  <span>Compare</span>
                </a>
              </div>
            </div>

            <div class="trust-badges">
              <div class="trust-badge">
                <div class="trust-badge-icon">🚚</div>
                <div class="trust-badge-title">Free Shipping</div>
                <div class="trust-badge-text">On orders over $35</div>
              </div>
              <div class="trust-badge">
                <div class="trust-badge-icon">✅</div>
                <div class="trust-badge-title">Verified Quality</div>
                <div class="trust-badge-text">Tested & approved</div>
              </div>
              <div class="trust-badge">
                <div class="trust-badge-icon">🔒</div>
                <div class="trust-badge-title">Secure Purchase</div>
                <div class="trust-badge-text">Protected checkout</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

      <div class="related-products">
        <div class="container">
          <h2 class="section-title">You Might Also Like</h2>
          <div class="related-products-grid">
            <div style="text-align: center; padding: var(--space-12); color: var(--color-gray-600); grid-column: 1 / -1;">
              <p style="margin-bottom: var(--space-4); font-size: var(--text-lg);">Discover more amazing products from our curated collection</p>
              <a href="/products" class="btn btn-primary">
                <span>🔍</span>
                <span>Browse All Products</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <footer>
    <div class="container">
      <p>&copy; 2024 True Essentials. All rights reserved.</p>
    </div>
  </footer>

  <!-- JSON-LD structured data for SEO -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org/",
      "@type": "Product",
      "name": "{product.fields.Title}",
      "description": "{product.fields.Description}",
      "image": "{product.fields['Image URL']}",
      "url": "https://yoursite.com/products/{product.fields.Slug}",
      "brand": {
        "@type": "Brand",
        "name": "True Essentials"
      },
      "offers": {
        "@type": "Offer",
        "url": "{product.fields['Affiliate URL']}",
        "availability": "https://schema.org/InStock"
      }
    }
  </script>
</body>
</html> 