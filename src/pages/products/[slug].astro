      object-fit: cover;
      transition: transform 0.3s ease;
      cursor: zoom-in;
      background: linear-gradient(135deg, var(--color-gray-50) 0%, var(--color-gray-100) 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--color-gray-400);
      font-size: var(--text-lg);
      font-weight: 500;
    }

