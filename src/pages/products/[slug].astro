      gap: var(--space-2);
    }

    .btn-sm {
      padding: var(--space-2) var(--space-3);
      font-size: var(--text-sm);
      flex: 1;
      text-align: center;
    }

    /* Mobile Responsive Design */
    @media (max-width: 768px) {
      .product-layout {
        grid-template-columns: 1fr;
        gap: var(--space-8);
        padding: var(--space-6);
