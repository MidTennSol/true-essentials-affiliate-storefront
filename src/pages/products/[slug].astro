    .product-description {
      color: var(--color-gray-700);
      font-size: var(--text-base);
      line-height: 1.7;
      white-space: pre-line;
      word-wrap: break-word;
      overflow-wrap: break-word;
      hyphens: auto;
    }

    /* Enhanced Product Actions */
