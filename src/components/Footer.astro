<footer class="global-footer">
  <div class="container">
    <div class="footer-content">
      <!-- Navigation Links -->
      <nav class="footer-nav">
        <a href="/" class="footer-link">Home</a>
        <a href="/products" class="footer-link">Products</a>
        <a href="/categories" class="footer-link">Categories</a>
        <a href="/affiliate-disclosure" class="footer-link">Affiliate Disclosure</a>
        <a href="/about" class="footer-link">About</a>
      </nav>
      
      <!-- Affiliate Disclosure Statement -->
      <div class="affiliate-disclosure">
        As an Amazon Associate, True Essentials earns from qualifying purchases. This site contains affiliate links to products. We may receive a commission for purchases made through these links.
      </div>
      
      <!-- Copyright -->
      <div class="copyright">
        Copyright Â© 2025 True-Essentials.com
      </div>
    </div>
  </div>
</footer>

<style>
  .global-footer {
    background: #f8fafc;
    border-top: 1px solid #e2e8f0;
    margin-top: auto;
    padding: 3rem 0 2rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    text-align: center;
  }

  .footer-nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
  }

  .footer-link {
    color: #4287a8;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.2s ease;
    padding: 0.25rem 0;
    position: relative;
  }

  .footer-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background: #4287a8;
    transition: width 0.2s ease;
  }

  .footer-link:hover {
    color: #336f74;
  }

  .footer-link:hover::after {
    width: 100%;
  }

  .affiliate-disclosure {
    max-width: 800px;
    color: #64748b;
    font-size: 0.85rem;
    line-height: 1.5;
    text-align: center;
  }

  .copyright {
    color: #64748b;
    font-size: 0.85rem;
    font-weight: 500;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .footer-nav {
      gap: 1rem;
    }

    .footer-link {
      font-size: 0.85rem;
    }

    .affiliate-disclosure {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .global-footer {
      padding: 2rem 0 1.5rem;
    }

    .footer-content {
      gap: 1.5rem;
    }

    .footer-nav {
      flex-direction: column;
      gap: 0.75rem;
    }
  }
</style> 